#!/bin/bash

rm -rf ./build
rm -rf ./install
mkdir build
mkdir install
cd build

cmake   \
    -Wno-dev \
    -DCMAKE_C_COMPILER=mpicc \
    -DCMAKE_CXX_COMPILER=mpicxx \
    -DCMAKE_EXPORT_COMPILE_COMMANDS=ON \
    -DCMAKE_INSTALL_PREFIX=../install \
    -DCMAKE_BUILD_TYPE=Debug \
    -DOpenCV_DIR=/path/to/cmake/opencv4 \
    -Dcallpath_DIR=path/to/opt/share/cmake/callpath \
    -DENABLE_MPI=OFF \
    -DENABLE_CUDA=ON \
    ..

make -j && make install && cd .. && tree install
